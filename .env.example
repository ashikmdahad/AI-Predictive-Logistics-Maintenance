# Backend config loaded into the backend container via docker-compose env_file

# Core
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=60
DB_URI=sqlite:///./app.db
CORS_ORIGINS=http://localhost:5173,http://localhost:8080

# Alerts
ALERT_PROB_THRESHOLD=0.6
ALERT_TEMPERATURE_MAX=80.0

# AI providers: local | external | google
MODEL_PROVIDER=google

# External provider settings (used when MODEL_PROVIDER=external)
EXTERNAL_MODEL_URL=
EXTERNAL_MODEL_API_KEY=
EXTERNAL_TIMEOUT_SECONDS=8

# Google Generative AI (used when MODEL_PROVIDER=google)
GOOGLE_GENAI_API_KEY=
GOOGLE_GENAI_MODEL=gemini-2.0-flash

# CMMS webhook integration (optional)
CMMS_WEBHOOK_URL=
CMMS_WEBHOOK_TOKEN=
